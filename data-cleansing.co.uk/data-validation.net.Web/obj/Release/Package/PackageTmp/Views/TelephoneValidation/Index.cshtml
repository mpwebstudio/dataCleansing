@{
    ViewBag.Title = "Telephone number validation by Data Cleansing";
}

<div class="app-header" style="margin-top:-50px">
    <div class="container">
        <div class="text-center">
            <h1 style="font-family:h1Family">
                TELEPHONE VAL<span style="color:red; font:bolder">I</span>DATION
</h1>
        </div>
    </div>
</div>

<div class="container">

    <div class="part text ">

        <p><h2>Real-time telephone validation</h2></p>

        <p>In order to prevent fraud, spam and other dubious activities telephone numbers verification plays a key role. This service not only keeps up to standard the quality of your data, but also improves communication with your customers and business partners. Our software is designed to verify, cleanse and validate your telephone numbers records in a user friendly way. </p>
    </div>

    <h3>Our comprehesive validation include:</h3>
    <ul>
        <li>Syntax verification</li>
        <li>Prefix verification</li>
    </ul>
    <br />
    
    <h3>Where to use?</h3>
    <ul>
        <li>Cleansing your data base</li>
        <li>Call centre</li>
        <li>Web page registration</li>
        <li>Marketing</li>
    </ul>

    <div class="row">
        <br />
        <div class="text-center">
            <h2 class="blue">Inline validation controller plus picture</h2>
        </div>
    </div>
    <div class="row">
        <div class="example">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
                <form id="search" onsubmit="return false" class="navbar-form">
                    <div id="telNumber" style="display:block" class="form-group has-feedback">
                        <input type="text" id="telNumb" value="" class="form-control" placeholder="Enter a telephone number" />
                        <span id="telTypePic" class="form-control-feedback"><i id="telPic"></i></span>
                        <button class="btn btn-success" onclick="getResults(apiNumber,1)">Validate</button>
                    </div>
                    <div id="telResult" style="display:none">

                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="text-center">
            <h2 class="blue">Inline telephone validation controller plus animation</h2>
        </div>
    </div>
    <div class="row">
        <div class="example">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
                <form id="search" onsubmit="return false" class="navbar-form">
                    <div id="telNumberT" style="display:block" class="form-group has-feedback">
                        <input type="text" id="telNumbT" value="" class="form-control" placeholder="Enter a telephone number" />
                        
                        <button class="btn btn-success" onclick="getResults(apiNumber,2)">Validate</button>
                    </div>
                    <div id="telResult" style="display:none">

                    </div>
                </form>
            </div>
            
        </div>
    </div>
 </div>
@Html.Partial("_Integration")

    <script src="~/javascript/phoneValidation.js"></script>
